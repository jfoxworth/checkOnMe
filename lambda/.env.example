# CheckOnMe Lambda Environment Configuration
# Copy this file to .env and update with your values

# Required Settings
DYNAMODB_TABLE_NAME=checkonme-dev
AWS_REGION=us-east-1

# Optional Settings  
EMAIL_TOPIC_ARN=
JWT_SECRET=your-secure-jwt-secret-change-in-production
WEB_VERIFICATION_URL=https://checkonme.app/verify
API_BASE_URL=https://api.checkonme.app

# Feature Flags
ENABLE_SMS=true
ENABLE_EMAIL=true
ENABLE_WEB_VERIFICATION=true
ENABLE_ESCALATION=true

# AWS Account (for SES email setup)
AWS_ACCOUNT_ID=123456789012

# Deployment Stage
STAGE=dev